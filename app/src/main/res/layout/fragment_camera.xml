<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CameraFragment">

    <!-- Layout for taking initial picture -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/firstLayout">

        <!-- TODO: This should be an image -->
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:id="@+id/takePic"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="16dp"

            android:text="TPI"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Layout for taking additional pictures and posting your picture -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondLayout"
        android:visibility="gone"
        >

        <HorizontalScrollView
            android:id="@+id/HorizontalImageScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp" />
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </HorizontalScrollView>



        <!-- TODO: This should be an image -->
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:id="@+id/postData"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="16dp"

            android:text="Post"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/HorizontalImageScrollView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
